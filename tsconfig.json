{
  "compilerOptions": {
    "sourceMap": false,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "jsx": "react",
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "strict": true,
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
