{
  "compilerOptions": {
    "sourceMap": false,
    "module": "ES2015",
    "target": "ES2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "jsx": "react",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "lib": ["dom", "dom.iterable", "ESNext"],
    "strict": true,
    "baseUrl": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
